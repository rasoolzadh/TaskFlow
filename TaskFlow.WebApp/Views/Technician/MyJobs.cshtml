@model IEnumerable<TaskFlow.WebApp.Models.JobViewModel>
@{
    ViewData["Title"] = "My Assigned Jobs";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Client</th>
            <th>Address</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Client.Address)</td>
                    <td><span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span></td>
                    <td>
                        <a asp-action="UpdateStatus" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Update Status</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">View Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">You have no jobs assigned to you.</td>
            </tr>
        }
    </tbody>
</table>
