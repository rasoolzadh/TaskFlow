@model IEnumerable<TaskFlow.WebApp.Models.JobViewModel>
@{
    ViewData["Title"] = "Job Management";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job</a>
</p>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Client</th>
            <th>Status</th>
            <th>Assigned To</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                    <td><span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Status)</span></td>
                    <td>
                        @if (item.AssignedTo != null)
                        {
                            @Html.DisplayFor(modelItem => item.AssignedTo.Name)
                        }
                        else
                        {
                            <span class="text-muted">Unassigned</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Assign" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Assign</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No jobs found.</td>
            </tr>
        }
    </tbody>
</table>
