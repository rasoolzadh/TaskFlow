@model IEnumerable<TaskFlow.WebApp.Models.UserViewModel>
@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</p>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td><span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.Role)</span></td>
                    <td>
                        @* We can add Edit/Delete buttons here in the future *@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
