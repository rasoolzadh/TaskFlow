<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskFlow.MobileApp.ViewModels"
             xmlns:model="clr-namespace:TaskFlow.MobileApp.Models"
             x:Class="TaskFlow.MobileApp.Views.MyJobsPage"
             x:DataType="vm:MyJobsViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto, *">

        <!-- FIX: Replaced HorizontalStackLayout with a Grid to fix the obsolete 'EndAndExpand' warning -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Padding="15,10">
            <Label Grid.Column="0" Text="Your Jobs" FontSize="24" FontAttributes="Bold" VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="Refresh" Command="{Binding GetJobsCommand}" IsEnabled="{Binding IsNotBusy}"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- List of Jobs -->
            <CollectionView ItemsSource="{Binding Jobs}"
                            SelectionMode="Single"
                            SelectionChangedCommand="{Binding GoToDetailsCommand}"
                            SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Job">
                        <!-- FIX: Corrected the invalid XML comment -->
                        <!-- IMPROVED UI FOR EACH JOB ITEM -->
                        <Frame Padding="15" Margin="10" BorderColor="LightGray" CornerRadius="8" HasShadow="True">
                            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto" RowSpacing="5">

                                <!-- Job Title -->
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />

                                <!-- Job Status Badge -->
                                <Frame Grid.Row="0" Grid.Column="1" Padding="8,4" CornerRadius="12" BackgroundColor="CornflowerBlue">
                                    <Label Text="{Binding Status}" TextColor="White" FontSize="12" FontAttributes="Bold"/>
                                </Frame>

                                <!-- Client Name -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Client: " FontAttributes="Bold" />
                                            <Span Text="{Binding Client.Name}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <!-- Client Address -->
                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Address: " FontAttributes="Bold" />
                                            <Span Text="{Binding Client.Address}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Busy Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Color="Orange" />
        </Grid>
    </Grid>

</ContentPage>
